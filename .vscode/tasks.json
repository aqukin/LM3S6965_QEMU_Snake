{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run QEMU",
            "type": "shell",
            "command": "qemu-system-arm",
            "args": [
                "-kernel", "${workspaceFolder}/build/RTOSDemo.elf",
                "-s", "-S",
                "-machine", "lm3s6965evb",
                "-serial", "stdio"
            ],
            "isBackground": true,          // 表示这是后台任务
            "problemMatcher": [],          // 空匹配器，避免报错
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
